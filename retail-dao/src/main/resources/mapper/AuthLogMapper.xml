<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jzfq.retail.core.dao.AuthLogMapper">
  <insert id="insertSelective" parameterType="com.jzfq.retail.bean.AuthLog">
    insert into auth_log
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="userId != null">
        user_id,
      </if>
      <if test="serverIp != null">
        server_ip,
      </if>
      <if test="clientIp != null">
        client_ip,
      </if>
      <if test="optContent != null">
        opt_content,
      </if>
      create_time,
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="userId != null">
        #{userId,jdbcType=INTEGER},
      </if>
      <if test="serverIp != null">
        #{serverIp,jdbcType=VARCHAR},
      </if>
      <if test="clientIp != null">
        #{clientIp,jdbcType=VARCHAR},
      </if>
      <if test="optContent != null">
        #{optContent,jdbcType=LONGVARCHAR},
      </if>
      now()
    </trim>
  </insert>

  <delete id="deleteDataJob" parameterType="string">
    delete from auth_log where create_time &lt;= #{deleteTime}
  </delete>

</mapper>